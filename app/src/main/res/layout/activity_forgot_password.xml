<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Login"
    android:weightSum="1">

    <!-- Rectángulo detrás del logo -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle_background" />

    <!-- Logo de la aplicación encima del rectángulo -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="-180dp"
        android:src="@drawable/logoapp" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECUPERAR CONTRASEÑA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <!-- Caja contenedora del formulario -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <!-- Label Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Input Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:hint="correo@correo.com"
            android:background="@drawable/et_format"
            android:inputType="textEmailAddress" />

        <!-- Botones Cancel y Reset Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:clickable="true" />

            <Button
                android:id="@+id/btResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Reset Password"
                android:textColor="@color/white"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- Espacio adicional para empujar botones hacia abajo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1" />
    <!-- Rectángulo en la parte inferior de la pantalla -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_bottom_background" />

</LinearLayout>
