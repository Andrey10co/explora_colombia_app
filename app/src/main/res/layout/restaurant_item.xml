<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/brunch_dining_24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2">

                <TextView
                    android:layout_height="35dp"
                    android:id="@+id/tvRestaurantName"
                    android:layout_width="268dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Nombre Restaurante"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvRestaurantDescription"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_width="268dp"
                    android:layout_height="60dp"
                    android:text="asdasdasdasdas sa dasasd  as sdaasd"/>

                <LinearLayout
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/brunch_dining_24px" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:text="Time 3 AM - 5 PM"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/restaurant_card_dot"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tvRestaurantState"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Abierto "/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:text="$13k - $15k"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivHeart"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:src="@drawable/favorite_24px"
                    android:layout_gravity="right"
                    android:layout_marginRight="7dp"/>


            </GridLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>